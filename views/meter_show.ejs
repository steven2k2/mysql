// views/meters/browse
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meters</title>

    <!-- Google Fonts: Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Optional link to Bootstrap for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Google Material Icons (Outlined Version) -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

    <link rel="stylesheet" href="css/styles.css"> <!-- Custom styles if any -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>

<%- include('partials/header') %>

<div class="container-fluid">
    <div class="row">
        <%- include('partials/sidebar') %>

        <!-- Main Content Area with Correct Bootstrap Grid -->
        <main role="main" class="col py-3">
            <h2 class="text-center mb-4">Meter Information</h2>

            <div class="row">
                <% data.forEach(meter => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h5>Meter ID: <%= meter.meter_id %></h5>
                                <p>Serial Number: <%= meter.serial_number %></p>
                            </div>
                            <div class="card-body">
                                <p><strong>Installation Date:</strong> <%= meter.installation_date %></p>
                                <p><strong>Location:</strong> <%= meter.location_address %></p>
                                <p><strong>Latitude:</strong> <%= meter.location_latitude %></p>
                                <p><strong>Longitude:</strong> <%= meter.location_longitude %></p>
                                <p><strong>Type:</strong> <%= meter.meter_type %></p>
                                <p><strong>Model:</strong> <%= meter.meter_make_model %></p>
                                <p><strong>Size:</strong> <%= meter.meter_size %> inches</p>
                                <p><strong>Capacity:</strong> <%= meter.capacity %> units</p>
                                <p><strong>Status:</strong> <%= meter.status.charAt(0).toUpperCase() + meter.status.slice(1) %></p>
                                <p><strong>Customer ID:</strong> <%= meter.customer_id %></p>
                                <p><strong>Last Reading Date:</strong> <%= meter.last_reading_date %></p>
                                <p><strong>Cumulative Usage:</strong> <%= meter.cumulative_usage %> units</p>
                                <p><strong>Last Maintenance Date:</strong> <%= meter.last_maintenance_date %></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </main>
    </div>
</div>


<!-- jQuery (required for Bootstrap Table and '$' usage) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"  crossorigin="anonymous"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Add click event to rows with the class `clickable-row`
        $('#meters_table').on('click', '.clickable-row', function () {
            const url = $(this).data('href');
            if (url) {
                window.location.href = url; // Uncomment to enable redirection
            }
        });
    });
</script>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>