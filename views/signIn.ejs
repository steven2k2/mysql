<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>

    <!-- Google Font: Work Sans -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;700&display=swap">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <style>
        /* Define CSS variables for colors */
        :root {
            --bg-large-screen: #f8f9fa; /* Light gray for large screens */
            --bg-small-screen: #ffffff; /* White for small screens */
            --bg-container: #ffffff; /* White for form container */
        }

        /* Apply Work Sans font to the entire page */
        body {
            font-family: 'Work Sans', sans-serif;
            background-color: var(--bg-large-screen);
        }

        /* Change background color on small screens */
        @media (max-width: 576px) {
            body {
                background-color: var(--bg-small-screen);
            }
        }
    </style>
</head>
<body>

<div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="container p-5 rounded-4" style="background-color: var(--bg-container);">
        <div class="row">
            <div class="col-md-6">
                <h1 class="display-2">Sign in</h1>
                <p class="lead text-muted">To continue to the Water & Power workplace</p>
            </div>
            <div class="col-md-6">
                <!-- Display alert if there is an error message -->
                <% if (showError && errorMessage) { %>
                    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert" aria-live="assertive">
                        <i class="bi bi-exclamation-triangle-fill"></i> <%= errorMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <!-- Sign-in form -->
                <form action="/sign-in" method="POST">
                    <div class="mb-3">
                        <!-- Include fake email for testing (remove for production) -->
                        <input type="email" class="form-control" id="username" name="username" placeholder="Email" value="lars.andersen@digitalpathsnorway.no" required>
                    </div>
                    <div class="mb-3">
                        <!-- Include fake password for testing (remove for production) -->
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="COOKIE*subs7kitten2boom" required>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="show-password" aria-controls="password">
                        <label class="form-check-label" for="show-password">Show password</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for Show Password functionality -->
<script>
    const showPasswordCheckbox = document.getElementById('show-password');
    const passwordField = document.getElementById('password');
    showPasswordCheckbox.addEventListener('change', function () {
        passwordField.type = this.checked ? 'text' : 'password';
        this.setAttribute('aria-pressed', this.checked);
    });
</script>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>