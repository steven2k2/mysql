<!-- views/meterReaders.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meter Readers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        /* Adds spacing below the navbar to prevent content overlap */
        .content-wrapper {
            margin-top: 80px; /* Adjust based on navbar height */
        }
    </style>
</head>
<body>

<!-- Navbar: A responsive navigation bar with a dark background, positioned at the top of the page -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container">
        <!-- Brand: Company name or logo that links back to the homepage -->
        <a class="navbar-brand" href="/">Energy Corporation</a>

        <!-- Toggler for mobile navigation -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <!-- Home link that returns to the index page -->
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <!-- Customer list link -->
                <li class="nav-item">
                    <a class="nav-link" href="/customers">Customers</a>
                </li>
                <!-- Meter reads link -->
                <li class="nav-item">
                    <a class="nav-link" href="/meters">Meter Reads</a>
                </li>
                <!-- Meter readers link -->
                <li class="nav-item">
                    <a class="nav-link" href="/meter-readers">Meter Readers</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main content with top margin to avoid navbar overlap -->
<div class="container content-wrapper">
    <main role="main" class="py-3">
        <h1 class="mb-4">Readers</h1>

        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Hired</th>
                    <th scope="col">City</th>
                    <th scope="col">Active</th>
                </tr>
                </thead>
                <tbody>
                <% meterReaders.forEach(reader => { %>
                    <tr>
                        <td><%= reader.full_name %></td>
                        <td><%= reader.email %></td>
                        <td><%= reader.phone_number %></td>
                        <td><%= reader.hire_date %></td>
                        <td><%= reader.city %></td>
                        <td><%= reader.is_active ? 'Yes' : 'No' %></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </main>
</div>

<!-- Footer -->
<footer class="bg-light text-center py-3 mt-4">
    <small>Powered by Node & Vanilla JS</small>
</footer>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>